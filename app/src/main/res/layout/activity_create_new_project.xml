<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewProjectActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:tint="@color/main"
            android:padding="10dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Create New Project"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/main"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/projectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cvImage"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Project Name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/main"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etProjectName"
        app:layout_constraintTop_toBottomOf="@+id/projectLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_field"
        android:drawableTint="@color/teal_700"
        android:hint="Write here..."
        android:inputType="text"
        android:padding="14dp"
        android:paddingStart="15dp"
        android:singleLine="true"
        android:textColorHint="@color/main"
        android:textSize="16sp"
        android:textColor="@color/main"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contractLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etProjectName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Contract"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/main"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etContract"
        app:layout_constraintTop_toBottomOf="@+id/contractLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_field"
        android:drawableTint="@color/teal_700"
        android:hint="Write here..."
        android:inputType="textMultiLine"
        android:padding="14dp"
        android:paddingStart="15dp"
        android:singleLine="true"
        android:textColorHint="@color/main"
        android:textSize="16sp"
        android:textColor="@color/main"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/accessoriesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etContract"
        app:layout_constraintStart_toStartOf="parent"
        android:text="List of Accessories"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/main"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etAccessories"
        app:layout_constraintTop_toBottomOf="@+id/accessoriesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_field"
        android:drawableTint="@color/teal_700"
        android:hint="Write here..."
        android:inputType="textMultiLine"
        android:padding="14dp"
        android:paddingStart="15dp"
        android:singleLine="true"
        android:textColorHint="@color/main"
        android:textSize="16sp"
        android:textColor="@color/main"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreate"
        app:layout_constraintTop_toBottomOf="@+id/etAccessories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/bg_field"
        android:backgroundTint="@color/main"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:text="Create New Project"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="normal" />


</androidx.constraintlayout.widget.ConstraintLayout>
