<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingBottom="5dp"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/filmmee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAppDec"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogo"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Login to your existing account!"
        android:textColor="@color/main"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etUsername"
        app:layout_constraintTop_toBottomOf="@+id/tvAppDec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/bg_field"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="15dp"
        android:drawableTint="@color/teal_700"
        android:hint="Enter Your Username"
        android:inputType="text"
        android:padding="14dp"
        android:paddingStart="15dp"
        android:singleLine="true"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        android:textColor="@color/main"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPassword"
        app:layout_constraintTop_toBottomOf="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/bg_field"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="15dp"
        android:drawableTint="@color/teal_700"
        android:hint="Enter Your password"
        android:inputType="textPassword"
        android:padding="14dp"
        android:paddingStart="15dp"
        android:singleLine="true"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        android:textColor="@color/main"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/bg_field"
        android:backgroundTint="@color/main"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="normal" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/orLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="or"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/main"/>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/teal_200"
        android:text="Login With Google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orLabel" />


</androidx.constraintlayout.widget.ConstraintLayout>